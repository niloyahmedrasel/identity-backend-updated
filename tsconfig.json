{
  "compilerOptions": {
    "target": "ES6",                        // JavaScript version to output
    "module": "commonjs",                   // Module system (Node.js uses CommonJS)
    "outDir": "./dist",                     // Directory for compiled JavaScript
    "rootDir": "./src",                     // Root directory for source files
    "esModuleInterop": true,                // To allow default imports of CommonJS modules
    "strict": true,                         // Enable all strict type-checking options
    "skipLibCheck": true,                   // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are consistent
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",                          // Include all TypeScript files in the src folder
    "index.ts"                              // Include the main TypeScript file outside src
  ],
  "exclude": [
    "node_modules"                          // Exclude node_modules
  ]
}
