{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "Node16",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["../../node_modules/@types", "./src/types"], // Ensure correct type roots
    "outDir": "dist", // Change this to your desired output directory, e.g., "build" or another path
    "rootDir": "src", // Change if your source files are located elsewhere
    "moduleResolution": "node16", // Common option for Node.js projects
    "esModuleInterop": true // Allows for compatibility with CommonJS modules
  },
  "include": [
    "src/**/*.ts",                          // Include all TypeScript files in the src folder
    "index.ts"                              // Include the main TypeScript file outside src
  ],
  "exclude": [
    "node_modules"                          // Exclude node_modules
  ]
}
